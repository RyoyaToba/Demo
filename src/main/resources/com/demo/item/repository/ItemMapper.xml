<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.demo.item.repository.ItemMapper" >

    <insert id="insertItem" parameterType="com.demo.item.entity.Item">
        <!-- テーブルにデータを挿入するSQL文 -->
        INSERT INTO Item (
            user_id
            ,name
            ,price
            ,target_date
            ,category_id
            ,bank_select_id
            ,created_by
            ,created_date
            ,updated_by
            ,updated_date
        ) VALUES (
            #{userId}
            ,#{name}
            ,#{price}
            ,#{targetDate}
            ,#{categoryId}
            ,#{bankSelectId}
            ,#{createdBy}
            ,#{createdDate}
            ,#{updatedBy}
            ,#{updatedDate}
        )
    </insert>

    <!--対象月のItem登録済データを取得-->
    <select id="retrieveItemInTargetMonth" resultType="com.demo.item.entity.Item">
        SELECT
            user_id
            ,item_id
            ,name
            ,price
            ,target_date
            ,category_id
            ,bank_select_id
            ,created_by
            ,created_date
            ,updated_by
            ,updated_date
        FROM
            item
        WHERE
            user_id = #{userId}
        AND <![CDATA[#{startDate, jdbcType=DATE} <= target_date]]>
        AND <![CDATA[#{endDate, jdbcType=DATE} >= target_date]]>
    </select>

    <!--Itemをidで削除する-->
    <delete id="deleteItem">
        DELETE FROM item
        WHERE
            user_id = #{userId}
            AND item_id = #{itemId}
    </delete>

    <update id="updateItem">
        UPDATE item SET
            price = #{price}
            ,updated_by = #{userId}
            ,updated_date = #{now}
        WHERE
            user_id = #{userId}
        AND item_id = #{itemId}
    </update>

    <select id="retrieveItemAll" resultType="com.demo.item.entity.Item">
        SELECT
            user_id
            ,item_id
            ,name
            ,price
            ,target_date
            ,category_id
            ,bank_select_id
            ,created_by
            ,created_date
            ,updated_by
            ,updated_date
        FROM
            item
        WHERE
            user_id = #{userId}
    </select>

    <insert id="multiInsertItems">
        INSERT INTO Item (
        user_id
        ,name
        ,price
        ,target_date
        ,category_id
        ,bank_select_id
        ,created_by
        ,created_date
        ,updated_by
        ,updated_date
        ) VALUES

        <foreach collection="items" item="item" separator=",">
            (#{item.userId}
            ,#{item.name}
            ,#{item.price}
            ,#{item.targetDate}
            ,#{item.categoryId}
            ,#{item.bankSelectId}
            ,#{item.createdBy}
            ,#{item.createdDate}
            ,#{item.updatedBy}
            ,#{item.updatedDate})
        </foreach>
    </insert>
</mapper>
